    cout << "Enter number x: ";
    cin >> x;

    cout << "Enter number y: ";
    cin >> y;

    int result = pow(x, y);

    cout << x << " in stepin " << y << " = " << result << endl;

    return 0;
}*/


/*-----------------------Task 3-----------------------

int main() {
    int sum = 0;
    int count = 0;

    for (int i = 1; i <= 1000; ++i) {
        sum += i;
        count++;
    }

    double average = static_cast<double>(sum) / count;

    cout << "Seredne arufmetuchne from 1 to 1000: " << average << endl;

    return 0;
}*/


/*-----------------------Task 4-----------------------

int main() {
    int a;
    long long product = 1;

    do {
        cout << "Enter number a (1 <= a <= 20): ";
        cin >> a;
    } while (a < 1 || a > 20);

    for (int i = a; i <= 20; ++i) {
        product *= i;
    }

    cout << "Mnozennya all of numbers from " << a << " to 20: " << product << endl;

    return 0;
}*/


