#include <iostream>
#include <cmath>

using namespace std;


/*-----------------------Task 1-----------------------

int main() {
    int a;
    int sum = 0;

    cout << "Enter number a: ";
    cin >> a;

    if (a > 500) {
        cout << "Error: Invalid. A has to be  to 500" << endl;
        return 1;
    }

    for (int i = a; i <= 500; ++i) {
        sum += i;
    }

    cout << "Sum of numbers from " << a << " to 500: " << sum << endl;

    return 0;
}*/


/*-----------------------Task 2-----------------------

